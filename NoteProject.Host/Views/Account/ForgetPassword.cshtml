@model ForgetPasswordModel

@{
    ViewData["Title"] = "Forget Password";
}
<link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />

<form id="kt_modal_forget_password_form" class="d-flex justify-content-center align-items-center my-2"
      asp-action="ForgetPassword" data-ajax="true" data-ajax-method="POST" data-ajax-success="onForgetPasswordSuccess">
    <div class="card d-flex justify-content-center align-items-center my-2">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item text-center">
                <a class="nav-link btl" asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item text-center">
                <a class="nav-link btr" asp-controller="Account" asp-action="Register">Signup</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="mb-4 tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <p class="fs-3 text-center my-2">Forget Password</p>
                <div class="form d-flex flex-column justify-content-center align-items-center px-4 pt-3">
                    @Html.EditorFor(e => e.Email, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control my-2",
                                placeholder = "Email",
                            }
                        })
                    <button type="submit" class="btn btn-dark btn-block">Apply</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script >
        function onForgetPasswordSuccess(res) {
            showTosater(res);
        };
    </script>
}
