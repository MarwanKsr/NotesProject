@model LoginRequestModel

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
<form id="kt_modal_login_form" class="d-flex justify-content-center align-items-center mt-4"
      asp-action="Login" data-ajax="true" data-ajax-method="POST" data-ajax-success="onLoginSuccess">
    <div class="card d-flex justify-content-center align-items-center mt-5">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item text-center">
                <a class="nav-link active btl" asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item text-center">
                <a class="nav-link btr" asp-controller="Account" asp-action="Register">Signup</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="mb-4 tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <p class="fs-3 text-center my-2">Login</p>
                <div class="form d-flex flex-column justify-content-center align-items-center px-4 pt-3">
                    @Html.EditorFor(e => e.UserName, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control mt-2",
                                placeholder = "Enter Your email..",
                            }
                        })

                    @Html.EditorFor(e => e.Password, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control mt-4",
                                placeholder = "Enter Your password..",
                                type = "password"
                            }
                        })
                    <div class="mb-3 me-auto">
                        <a asp-controller="Account" asp-action="ForgetPassword">Forget password ?</a>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">Login</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function onLoginSuccess(res) {
            debugger;
            showTosater(res);
            if (res.type == '@((int)ToasterResultType.Success)') {
                setTimeout(function () {
                    window.location.assign("/");
                }, 500);
            }
        };
    </script>
}